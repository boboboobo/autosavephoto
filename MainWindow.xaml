<Window x:Class="autosavephoto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autosavephoto"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="800"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded" Background="#FF3E3E3E">
    <Grid x:Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FF292929" BorderThickness="1" Width="760" Height="300" Margin="0,10,0,10">
            <Image x:Name="ClipboardImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="760" Height="300" />

        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5,0,5,0">
            
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock x:Name="FilePath" TextWrapping="Wrap" Text="保存先パス:" Background="#FF444750" Width="400" Margin="0,0,10,0"/>
                <Button x:Name="OpenPath" Content="Browse" Click="OpenPath_Click"/>
            </StackPanel>


            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>

                    <ColumnDefinition Width="*"/>

                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Number: " VerticalAlignment="Center" Foreground="White" Margin="10,0,5,0"/>
                    <TextBox x:Name="StartNumber" Text="1" Width="50" Background="#FF9C9C9C" VerticalAlignment="Center" TextAlignment="Right"/>

                    <TextBlock Text="ベースファイル名:" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                    <TextBox x:Name="BaseName" Text="file name" Width="150" Background="#FF9C9C9C" Margin="0,0,5,0"/>

                    
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="拡張子: " VerticalAlignment="Center" Foreground="White" Margin="20,0,5,0"/>
                    <ComboBox x:Name="ExtensionCombo" Width="120" Margin="0,0,10,0">
                        <ComboBoxItem Content=".jpg" IsSelected="True"/>
                        <ComboBoxItem Content=".png"/>
                    </ComboBox>

                    <Button x:Name="Save" Content="Save" Width="80" Click="Save_Click"/>
                </StackPanel>

            </Grid>
            <TextBox x:Name="LogText" TextWrapping="Wrap" Text="TextBlock" FontSize="12" Margin="0,8,0,0" Height="50" VerticalAlignment="Top" IsReadOnly="True"/>


        </StackPanel>

    </Grid>

</Window>
